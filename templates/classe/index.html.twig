{# templates/classe/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Classe{% endblock %}

{% block body %}
    <div class="container mt-4">
        <table id="statTable" class="table table-striped table-bordered table-hover dataTable">
            <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Classe</th>
                <th>Nombre d'Etudiants</th>
                <th>Departement Associ√©e</th>
                <th>Annee Academique</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classe in classes %}
            <tr>
                <td>{{ classe.id }}</td>
                <td>{{ classe.niveau }}</td>
                <td>{{ classe.inscriptions|length }}</td>
                <td>{{ classe.departement.coded }}</td>
                <td>{{ anneeAcademique }}</td>
                <td>
                    <a href="{{ path('app_classe_show', {'id': classe.id}) }}" class="btn btn-info btn-sm"><i class="fa-solid fa-eye"></i></a>
                    <a href="{{ path('app_classe_edit', {'id': classe.id}) }}" class="btn btn-warning btn-sm"><i class="fa-solid fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_classe_new') }}" class="btn btn-primary"><i class="fa-solid fa-circle-plus"></i></a>
</div>
{% endblock %}
