{# templates/inscriptions/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Inscriptions{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Ajout de la classe "dataTable" à la table pour DataTables -->
    <table id="statTable" class="table table-striped table-bordered table-hover dataTable">
        <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Année Académique</th>
                    <th>Étudiant</th>
                    <th>Classe</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for inscription in inscriptions %}
                <tr>
                    <td>{{ inscription.id }}</td>
                    <td>{{ inscription.anneacademique }}</td>
                    <td>{{ inscription.etudiant.nom }} {{ inscription.etudiant.prenom }}</td>
                    <td>{{ inscription.classe.nomc }}</td>
                    <td>
                        <a href="{{ path('app_inscriptions_show', {'id': inscription.id}) }}" class="btn btn-info btn-sm"><i class="fa-solid fa-eye"></i></a>
                        <a href="{{ path('app_inscriptions_edit', {'id': inscription.id}) }}" class="btn btn-warning btn-sm"><i class="fa-solid fa-pen"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_inscriptions_new') }}" class="btn btn-primary"><i class="fa-solid fa-circle-plus"></i></a>
    </div>
{% endblock %}
