{% extends 'base.html.twig' %}

{% block title %}Faculites{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="display-6 text-center mb-4">Faculites</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ faculite.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ faculite.nomf }}</td>
                </tr>
                <tr>
                    <th>Code</th>
                    <td>{{ faculite.codef }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_faculites_index') }}" class="btn btn-secondary btn-sm me-2"><i class="fa-solid fa-chevron-left"></i></a>
        <a href="{{ path('app_faculites_edit', {'id': faculite.id}) }}" class="btn btn-warning btn-sm me-2"><i class="fa-solid fa-pen"></i></a>

        {{ include('faculites/_delete_form.html.twig') }}
    </div>
{% endblock %}
