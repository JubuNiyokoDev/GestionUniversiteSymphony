{% extends 'base.html.twig' %}

{% block title %}Edit Faculites{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="display-6 text-center mb-4">Edit Faculites</h1>

        {{ form_start(form, {'attr': {'class': 'form'}}) }}
            <div class="mb-3">
                {{ form_label(form.nomf, 'Nom', {'attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nomf, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nomf) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.codef, 'Code', {'attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.codef, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.codef) }}
            </div>
            <button type="submit" class="btn btn-primary">{{ button_label|default('Update') }}</button>
        {{ form_end(form) }}

        <a href="{{ path('app_faculites_index') }}" class="btn btn-secondary mt-3"><i class="fa-solid fa-chevron-left"></i> Back</a>
    </div>
{% endblock %}
