{% extends 'base.html.twig' %}

{% block title %}Facultés{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Ajout de la classe "dataTable" à la table pour DataTables -->
    <table id="statTable" class="table table-striped table-bordered table-hover dataTable">
        <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Code</th>
                    <th>Nbre De Departements</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for faculite in faculites %}
                <tr>
                    <td>{{ faculite.id }}</td>
                    <td>{{ faculite.nomf }}</td>
                    <td>{{ faculite.codef }}</td>
                    <td>{{ faculite.departements|length }}</td> {# Correction ici #}
                    <td>
                        <a href="{{ path('app_faculites_show', {'id': faculite.id}) }}" class="btn btn-info btn-sm"><i class="fa-solid fa-eye"></i></a>
                        <a href="{{ path('app_faculites_edit', {'id': faculite.id}) }}" class="btn btn-warning btn-sm"><i class="fa-solid fa-pen"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_faculites_new') }}" class="btn btn-primary"><i class="fa-solid fa-circle-plus"></i></a>
    </div>
{% endblock %}
