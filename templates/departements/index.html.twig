{% extends 'base.html.twig' %}

{% block title %}Départements Index{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Ajout de la classe "dataTable" à la table pour DataTables -->
    <table id="statTable" class="table table-striped table-bordered table-hover dataTable">
        <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Code</th>
                    <th>Nombre Des Classes</th> {# Correction ici #}
                    <th>Faculté Associée</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for departement in departements %}
                <tr>
                    <td>{{ departement.id }}</td>
                    <td>{{ departement.nomd }}</td>
                    <td>{{ departement.coded }}</td>
                    <td>{{ departement.classes|length }}</td> {# Utilisation de |length pour compter les classes #}
                    <td>{{ departement.faculite.codef }}</td>
                    <td>
                        <a href="{{ path('app_departements_show', {'id': departement.id}) }}" class="btn btn-info btn-sm"><i class="fa-solid fa-eye"></i></a>
                        <a href="{{ path('app_departements_edit', {'id': departement.id}) }}" class="btn btn-warning btn-sm"><i class="fa-solid fa-pen"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_departements_new') }}" class="btn btn-primary"><i class="fa-solid fa-circle-plus"></i></a>
    </div>
{% endblock %}
