{% extends 'base.html.twig' %}

{% block title %}New Departements{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="display-6 text-center mb-4">Create New Departements</h1>

        {{ form_start(form, {'attr': {'class': 'form'}}) }}
            <div class="mb-3">
                {{ form_label(form.nomd, 'Nom', {'attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nomd, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nomd) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.coded, 'Code', {'attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.coded, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.coded) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.faculite, 'Facult√©', {'attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.faculite, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.faculite) }}
            </div>
            <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}

        <a href="{{ path('app_departements_index') }}" class="btn btn-secondary mt-3"><i class="fa-solid fa-chevron-left"></i> Back</a>
    </div>
{% endblock %}
