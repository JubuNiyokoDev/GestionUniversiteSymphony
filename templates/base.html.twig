<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Symfony Test WebApp{% endblock %}</title>

    <!-- Bootstrap CSS depuis CDN -->
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">

    <!-- DataTables CSS depuis CDN -->
    <link rel="stylesheet" href="{{ asset('css/dataTables.bootstrap5.css') }}">

    <!-- FontAwesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">


    <style>
        .nav-link.active {
            color: #fff !important;
            background-color: #000000 !important; /* Couleur attrayante (dark) */
            border-radius: 5px; /* Ajoute des coins arrondis */
            padding: 8px 15px;
        }

        .nav-link:hover {
            background-color: #000000 !important; /* Couleur plus claire au survol */
            color: #fff !important;
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body>
    <header>
        <!-- Utilisation du système de navigation Bootstrap -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item me-4">
                            <a class="nav-link {% if app.request.get('_route') == 'app_home' %}active{% endif %}" href="{{ path('app_home') }}">Accueil</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link {% if app.request.get('_route') == 'app_faculites_index' %}active{% endif %}" href="{{ path('app_faculites_index') }}">Gestion Facultés</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link {% if app.request.get('_route') == 'app_classe_index' %}active{% endif %}" href="{{ path('app_classe_index') }}">Gestion Classes</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link {% if app.request.get('_route') == 'app_departements_index' %}active{% endif %}" href="{{ path('app_departements_index') }}">Gestion Départements</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link {% if app.request.get('_route') == 'app_etudiants_index' %}active{% endif %}" href="{{ path('app_etudiants_index') }}">Gestion Étudiants</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link {% if app.request.get('_route') == 'app_inscriptions_index' %}active{% endif %}" href="{{ path('app_inscriptions_index') }}">Gestion Inscriptions</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        {% block body %}{% endblock %}
    </main>

    <!-- jQuery (obligatoire pour DataTables) depuis CDN -->
    <script src="{{ asset('js/jquery-3.7.1.js') }}"></script>

    <!-- Bootstrap JS depuis CDN -->
    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>

    <!-- DataTables JS + Adaptation pour Bootstrap 5 depuis CDN -->
    <script src="{{ asset('js/dataTables.js') }}"></script>
    <script src="{{ asset('js/dataTables.bootstrap5.js') }}"></script>

    <!-- DataTables Configuration -->
    <script src="{{ asset('js/dataTablesConfig.js') }}"></script>
</body>
</html>
