<form method="post" action="{{ path('app_etudiants_delete', {'id': etudiant.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ etudiant.id) }}">
    <button type="submit" class="btn btn-danger btn-sm">
        <i class="fa-solid fa-trash"></i>
    </button>
</form>
