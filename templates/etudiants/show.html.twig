{% extends 'base.html.twig' %}

{% block title %}Étudiant{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="display-4 mb-4">{{ etudiant.nom }} {{ etudiant.prenom }}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ etudiant.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ etudiant.nom }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ etudiant.prenom }}</td>
                </tr>
                <tr>
                    <th>Date de Naissance</th>
                    <td>{{ etudiant.ddn|date('Y-m-d') }}</td>
                </tr>
                <tr>
                    <th>Genre</th>
                    <td>{{ etudiant.gerne }}</td>
                </tr>
                <tr>
                    <th>Note Examen</th>
                    <td>{{ etudiant.noteexeta }}</td>
                </tr>
                <tr>
                    <th>Classe</th>
                    <td>
                        {{ etudiant.classe.niveau }} ({{ etudiant.classe.departement }} - {{ etudiant.classe.faculte }})
                    </td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_etudiants_index') }}" class="btn btn-secondary mt-3"><i class="fa-solid fa-chevron-left"></i></a>
        <a href="{{ path('app_etudiants_edit', {'id': etudiant.id}) }}" class="btn btn-warning mt-3"><i class="fa-solid fa-pen"></i></a>

        {{ include('etudiants/_delete_form.html.twig') }}
    </div>
{% endblock %}
