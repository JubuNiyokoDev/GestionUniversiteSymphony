{# templates/etudiants/_form.html.twig #}

<form {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}>
    <div class="mb-3">
        {{ form_label(form.nom, 'Nom', {'attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.nom) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.prenom, 'Prénom', {'attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.prenom) }}
    </div>
    <!-- Ajoutez les autres champs de formulaire de la même manière -->
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
</form>
